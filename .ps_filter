#!/bin/bash

# I use this as part of my personal environment setup
# so it should be linked from the git repo to $HOME/mtebenv/

# This is broken out from .conditional_starters for modularity
# and updatability, but it is sourced in that file, and ideally
# this file should not be sourced directly.

# use px if available


function psearch() {
  local px=$(type -p px)
  local ps_search='ps awux 2> /dev/null |grep %s'
  local px_search='px %s 2> /dev/null'

  function pxsearch() {
    px $@ 2> /dev/null
  } 

  function pssearch() {
    ps awux 2> /dev/null |grep $@ 
  }

  if [ -n "$px" ]; then 
    export pxsearch
    export PS=pxsearch
  else
    export pssearch
    export PS=pssearch
  fi
}  
